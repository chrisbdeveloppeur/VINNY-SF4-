<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="justify-content: center;padding-left: 17px;">



        <div class="modal-content" style="border-radius: 0px; border: none;position: absolute;width: 90vw;">

            <div class="modal-header is-centered justify-content-center align-items-center" style="background: #343a40;border-radius: 0px">
                <h5 class="modal-title has-text-weight-bold is-size-3-touch" style="color: #999c9f;">Licenses</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #999c9f;">
                    <span class="is-size-2-touch" aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="pricing-table columns">

                    {% for licence in licence %}
                        <div class="pricing-plan is-{{ licence.color }} is-full-touch is-1 column" style="padding: 0;border:none;border-radius: 0px">
                            <div class="plan-header has-background-{{ licence.color }} has-text-white text-uppercase is-size-3-touch" style="border-radius: 0px">{{ licence.titre }}</div>
                            <div class="plan-price">

                                {% if licence.dollar or licence.euro %}
                                    <span class="plan-price-amount"><span class="plan-price-currency is-family-secondary has-text-grey-light">$</span>{{ licence.dollar }}</span>
                                {% else %}
                                    <span class="plan-price-amount is-size-3">~</span>
                                {% endif %}
                            </div>

                            <div class="plan-items is-size-5 is-size-3-touch">

                                {% if licence.info1 %}
                                    <div class="plan-item">{{ licence.info1 }}</div>
                                {% else %}
                                    <div class="plan-item">-</div>
                                {% endif %}

                                {% if licence.info2 %}
                                    <div class="plan-item">{{ licence.info2 }}</div>
                                {% else %}
                                    <div class="plan-item">-</div>
                                {% endif %}

                                {% if licence.info3 %}
                                    <div class="plan-item">{{ licence.info3 }}</div>
                                {% else %}
                                    <div class="plan-item">-</div>
                                {% endif %}

                                {% if licence.info4 %}
                                    <div class="plan-item">{{ licence.info4 }}</div>
                                {% else %}
                                    <div class="plan-item">-</div>
                                {% endif %}

                                {% if licence.info5 %}
                                    <div class="plan-item">{{ licence.info5 }}</div>
                                {% else %}
                                    <div class="plan-item">-</div>
                                {% endif %}

                                {% if licence.info6 %}
                                    <div class="plan-item">{{ licence.info6 }}</div>
                                {% else %}
                                    <div class="plan-item">-</div>
                                {% endif %}

                            </div>

                            <div class="plan-footer">
                                <a title="Contact Vinnyvixi" href="{{ path('contact') }}" class="button is-fullwidth has-text-weight-bold has-text-white is-size-3-touch" style="border-radius: 0px;">click for next step</a>
                            </div>
                        </div>
                    {% endfor %}


                </div>
            </div>




        </div>
    </div>
</div>