{% extends 'base.html.twig' %}

{% block title %}{% include('includes/nav_title.html.twig') %} Licenses{% endblock %}

{% block description %}
    <meta name="description" content="Here you will find each license terms to use Beat Maker productions. Vous trouverez ici chaque modalitÃ©s des licences pour exploiter les productions du Beat Maker.">
{% endblock %}

{% block titre_landscape %}
    Licenses
{% endblock %}

{% block titre %}
    Licenses
{% endblock %}

{% block section_bg %}background:top / cover no-repeat url('{{ asset('build/images/matos_vinny_edited_resized.1e9057d6.jpg')}}'){% endblock %}

{% block entete %}
    <h2 class="subtitle has-text-centered is-4 is-family-primary  has-text-white-bis" style="position: relative;margin-top:50px;padding: 10px;border-radius: 5px;background: rgba(0,0,0,.8);box-shadow: rgb(0, 0, 0) 0px 0px 10px">
        Want to get a beat? here are my offers
    </h2>
{% endblock %}

{% block img_header %}
    <div class="header-background-image" style="background: center / auto 100% no-repeat url({{ asset('build/images/contact_hands_2_resized.486d3640.jpg') }});box-shadow: 0px 0px 30px 10px black;">
        <div class="header-background-layer">
        </div>
    </div>
{% endblock %}

{% block content %}

            <a class="pricing-table " href="{{ path('contact') }}" >

                {% for licence in licence %}
                    <div class="pricing-plan is-{{ licence.color }} is-full-touch is-1 column" style="padding: 0;border:none;border-radius: 0px;background: none" title="{{ licence.titre }}">
                        <div class="plan-header has-background-{{ licence.color }} has-text-black text-uppercase" style="border-radius: 0px;position: relative">
                                <div style="opacity:.2;height: 100%;width: 100%;z-index:0;position:absolute;left:0;top:0;background: center / cover no-repeat url({{ asset('build/images/skyline_w.acbadcba.svg') }})"></div>
                                <div class="has-text-weight-bold " style="z-index: 0;position: relative">
                                    {{ licence.titre }}
                                </div>
                        </div>

                        <div class="plan-price">

                            {% if licence.dollar or licence.euro %}
                                <span class="plan-price-amount is-family-code is-size-3-desktop"><span class="plan-price-currency is-family-code has-text-{{ licence.color }}" style="font-size: 2rem !important;">$</span>{{ licence.dollar }}</span>
                            {% else %}
                                <span class="plan-price-amount is-size-3">~</span>
                            {% endif %}

                        </div>

                        <div class="plan-items " style="display: grid;height: 100%;">

                            {% if licence.info1 %}
                                <div class="plan-item">{{ licence.info1 }}</div>
                            {% else %}
                                <div class="plan-item">-</div>
                            {% endif %}

                            {% if licence.info2 %}
                                <div class="plan-item">{{ licence.info2 }}</div>
                            {% else %}
                                <div class="plan-item">-</div>
                            {% endif %}

                            {% if licence.info3 %}
                                <div class="plan-item">{{ licence.info3 }}</div>
                            {% else %}
                                <div class="plan-item">-</div>
                            {% endif %}

                            {% if licence.info4 %}
                                <div class="plan-item">{{ licence.info4 }}</div>
                            {% else %}
                                <div class="plan-item">-</div>
                            {% endif %}

                            {% if licence.info5 %}
                                <div class="plan-item">{{ licence.info5 }}</div>
                            {% else %}
                                <div class="plan-item">-</div>
                            {% endif %}

                            {% if licence.info6 %}
                                <div class="plan-item">{{ licence.info6 }}</div>
                            {% else %}
                                <div class="plan-item">-</div>
                            {% endif %}

                        </div>

                        <div class="plan-footer">
                            <div class="button is-fullwidth has-text-weight-bold has-text-black " style="border-radius: 0px;">Click for next step</div>
                        </div>
                    </div>
                {% endfor %}


            </a>


    <script>
        let navLinkLicenses = document.getElementById('navLinkLicenses');
        navLinkLicenses.classList.add("navlink-active");
    </script>


{% endblock %}
