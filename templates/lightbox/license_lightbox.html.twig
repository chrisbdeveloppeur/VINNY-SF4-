<div class="container" id="app">
    <div class="modal is-active" style="transition: .5s;height: 0;">
        <div class="modal-background"></div>
        <div class="modal-content" style="border-radius: 0px;background: none;display: flex;justify-content: center;align-items: center;">


                            <div class="pricing-table columns pricing-table-beats">

                                {% for licence in licence %}
                                    <div class="pricing-plan is-{{ licence.color }} is-full-touch is-1 column" style="padding: 0;border:none;border-radius: 0px">
                                        <div class="plan-header has-background-{{ licence.color }} has-text-white text-uppercase is-size-3-touch is-size-6" style="border-radius: 0px;position: relative">
                                            <div style="opacity:.3;height: 100%;width: 100%;z-index:0;position:absolute;left:0;background: center / cover no-repeat url({{ asset('build/images/skyline_w.acbadcba.svg') }})"></div>
                                            {{ licence.titre }}
                                        </div>
                                        <div class="plan-price">

                                            {% if licence.dollar or licence.euro %}
                                                <span class="plan-price-amount is-size-3-desktop is-family-code"><span class="plan-price-currency is-family-code has-text-{{ licence.color }}" style="font-size: 2rem !important;">$</span>{{ licence.dollar }}</span>
                                            {% else %}
                                                <span class="plan-price-amount is-size-3-desktop">~</span>
                                            {% endif %}
                                        </div>

                                        <div class="plan-items is-size-6 is-size-3-touch" style="display: grid;height: 100%;">

                                            {% if licence.info1 %}
                                                <div class="plan-item info-flex">{{ licence.info1 }}</div>
                                            {% else %}
                                                <div class="plan-item info-flex">-</div>
                                            {% endif %}

                                            {% if licence.info2 %}
                                                <div class="plan-item info-flex">{{ licence.info2 }}</div>
                                            {% else %}
                                                <div class="plan-item info-flex">-</div>
                                            {% endif %}

                                            {% if licence.info3 %}
                                                <div class="plan-item info-flex">{{ licence.info3 }}</div>
                                            {% else %}
                                                <div class="plan-item info-flex">-</div>
                                            {% endif %}

                                            {% if licence.info4 %}
                                                <div class="plan-item info-flex">{{ licence.info4 }}</div>
                                            {% else %}
                                                <div class="plan-item info-flex">-</div>
                                            {% endif %}

                                            {% if licence.info5 %}
                                                <div class="plan-item info-flex">{{ licence.info5 }}</div>
                                            {% else %}
                                                <div class="plan-item info-flex">-</div>
                                            {% endif %}

                                            {% if licence.info6 %}
                                                <div class="plan-item info-flex">{{ licence.info6 }}</div>
                                            {% else %}
                                                <div class="plan-item info-flex">-</div>
                                            {% endif %}

                                        </div>

                                        <div class="plan-footer">
                                            <a title="Contact Vinnyvixi" href="{{ path('contact') }}" class="button is-fullwidth has-text-weight-bold has-text-white is-size-3-touch" style="border-radius: 0px;">click for next step</a>
                                        </div>
                                    </div>
                                {% endfor %}


                            </div>

        </div>
        <button class="modal-close is-large" style="position: absolute"></button>
    </div>
</div>