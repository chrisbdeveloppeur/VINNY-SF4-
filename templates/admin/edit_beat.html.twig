{% extends 'base.html.twig' %}

{% block title %}{% include('includes/nav_title.html.twig') %} Editer un beat{% endblock %}

{% block content %}



    <section class="hero is-warning is-small is-bold">
        <div class="hero-body has-text-centered">
            <div class="container">
                <h1 class="title has-text-weight-bold">
                    Modification du beat
                </h1>
            </div>
        </div>
    </section>


    <section class="section is-flex" style="justify-content: center;">

        <div class="container column is-full-touch is-two-fifths-desktop is-one-fifth-fullhd">



            {{ form_start(editBeatForm) }}

            <div class="columns is-centered">
                {% include 'includes/flash_message.html.twig' %}
            </div>

            {% if form_errors(editBeatForm) != null %}
                <div class="form-error notification is-danger">
                    <button class="delete" onclick="this.parentElement.parentElement.removeChild(this.parentElement);"></button>
                    {{ form_errors(editBeatForm) }}
                </div>
            {% endif %}

            <div class="field">
                <label class="label">Beat name</label>

                <div class="">

                    {{ form_row(editBeatForm.beatName, {'attr' : {'class' : 'input', 'alt' : 'beat name'}
                    }) }}

                </div>

            </div>

            <div class="field">
                <label class="label">Titre</label>

                <div class="">

                    {{ form_row(editBeatForm.titre, {'attr' : {'class' : 'input', 'alt' : 'titre'}
                    }) }}

                </div>

            </div>

            <div class="field">
                <label class="label">Artiste</label>

                <div class="">

                    {{ form_row(editBeatForm.artiste, {'attr' : {'class' : 'input', 'alt' : 'artiste'}
                    }) }}

                </div>

            </div>

            <div class="field">
                <label class="label">Album</label>

                <div class="">

                    {{ form_row(editBeatForm.album, {'attr' : {'class' : 'input', 'alt' : 'album'}
                    }) }}

                </div>

            </div>

            <div class="field">
                <label class="label">Genre</label>

                <div class="">

                    {{ form_row(editBeatForm.genre, {'attr' : {'class' : 'input', 'alt' : 'genre'}
                    }) }}

                </div>

            </div>

            <div class="column is-flex" style="justify-content: center">
                {% if beat.beatname %}
                    <img src="{{ vich_uploader_asset(beat, 'beatFile') | imagine_filter('normal_size') }}" alt="">
                {% endif %}
            </div>


            <div class="field">
                <label class="label">Fichier</label>

                <div class="">

                    {{ form_row(editBeatForm.beatFile, {'attr' : {'class' : 'input', 'alt' : 'fichier'}
                    }) }}

                </div>

            </div>

            <div class="field is-flex" style="justify-content: center">
                <button class="button is-info">Sauvegarder</button>
            </div>

            {{ form_end(editBeatForm) }}

        </div>

    </section>

{% endblock %}