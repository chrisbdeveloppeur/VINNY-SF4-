<div id="player" class="has-background-light" style="align-items: center">

    <div class="btn-left" style="display: flex;justify-content: space-between;align-items: center;">

        <div class="" style="white-space: nowrap">
            <button type="button" class="btn-primary is-size-4 stopBtn" style="background: rgba(0,0,0,0);box-shadow: none;border: none">
                <i class="fas fa-stop" title="Stop" style="color: black;text-shadow: rgb(0, 63, 255) 0 0 10px;"></i>
            </button>

            <button type="button" class="btn-primary is-size-4 playBtn" style="background: rgba(0,0,0,0);box-shadow: none;border: none">
                <i id="playIcon" class="fas fa-play" title="Play" style="color: black;text-shadow: rgb(0, 63, 255) 0 0 10px;"></i>
            </button>
        </div>

        <div class="">
            <button type="button" class="btn-primary is-size-4 prevBtn" style="background: rgba(0,0,0,0);box-shadow: none;border: none">
                <i class="fas fa-step-backward" title="Previous beat" style="color: black;text-shadow: rgb(0, 63, 255) 0 0 10px;"></i>
            </button>
        </div>

    </div>

    <div class="has-text-centered" style="position: relative;display: flex;flex: 1;justify-content: center">

            <div id="track-title" style="z-index: 1">{% trans %}Track{% endtrans %}</div>

            <div id="timeLine">
                <div id="cursor"></div>
                <div id="currentTime" class="bg-info" style="position:absolute;top: 0;"></div>
            </div>

    </div>


    <div class="btn-right" style="display: flex;justify-content: space-between;align-items: center;">
            <button type="button" class="btn-primary is-size-4 nextBtn" style="background: rgba(0,0,0,0);box-shadow: none;border: none">
                <i class="fas fa-step-forward" title="Next beat" style="color: black;text-shadow: rgb(0, 63, 255) 0 0 10px;"></i>
            </button>

                <div class="is-hidden-touch" style="display: flex;justify-content: space-evenly;align-items: center;width: 30%">
                    <div id="current-time">--</div>
                    <div> / </div>
                    <div id="track-time">--</div>
                </div>
            <button type="button" id="cross-hide-player" class="btn-primary is-size-4" style="background: rgba(0,0,0,0);box-shadow: none;border: none">
                <i class="fas fa-times-circle" title="Hide player" style="color: black;text-shadow: rgb(0, 63, 255) 0 0 10px;"></i>
            </button>

    </div>

</div>





