<label class="label columns is-centered">
    <h2 class="column text-uppercase has-text-white bg-info">

        <p class="has-background-black-bis has-icons-left is-family-code is-size-3" style="padding: 10px; margin-bottom: 0">

            <span class="icon is-small has-text-info" style="margin:0 7px">
                <i class="fas fa-registered"></i>
            </span>

            Original <strong>Beats</strong>

        </p>

    </h2>

</label>

{% for beat in beat %}


{% if not beat.iframe %}

    <div class="filterDiv {{ beat.genre }}" style="margin-bottom: 10px;position: relative">

        <div class="column is-hidden-tablet"  style="padding: 0; position: absolute;width: 100%;height: 100%;background:center / 250px 250px no-repeat
                {% if beat.beatimagename %}url({{ vich_uploader_asset(beat, 'beatImage') | imagine_filter('normal_size') }})
                {% else %}url({{ asset('build/images/logo_vinny_letra_2.a861ac20.png') }})
                {% endif %};">
            <div style="background: rgba(0,0,0,0.6);height: 100%;width: 100%">
            </div>
        </div>

        <div class="column" style="position: relative">

            <div class="columns has-text-centered" style="background: rgba(26,26,26,.8);">

                <div class="is-hidden-mobile">
                    <div class="column is-flex is-centered is-vcentered justify-content-center align-items-center">
                        {% if beat.beatimagename %}
                            <img height="110px" width="110px" src="{{ vich_uploader_asset(beat, 'beatImage') | imagine_filter('normal_size') }}" alt="Illustration" style="border-radius:3px;box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1); background: rgba(255,255,255,0.1)">
                        {% else %}
                            <img height="110px" width="110px" src="{{ asset('build/images/logo_vinny_letra_2.a861ac20.png') }}" alt="Illustration" style="height: 110px;width: 100px;border-radius:3px;box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1); background: rgba(255,255,255,0.1)">
                        {% endif %}

                        {#<img style="position: absolute" height="45px" width="45px" src="{{ asset('build/images/play_w.73a5583a.svg') }}" alt="play button">#}
                        <i class="icon fas fa-3x fa-play-circle has-text-light play-button" style="position: absolute;height: 110px;width: 100px;"></i>
                    </div>
                </div>



                    <div class="column">

                        <div class="columns is-centered is-vcentered has-text-centered is-size-4-mobile" style=" color: white;margin: 0;padding:0;height:50%">

                            <div class="column">
                                <label for="titre" style="margin: auto"><strong class="">Title : </strong></label>
                                {% if beat.titre %}
                                    {{ beat.titre }}
                                {% else %}
                                    N/C
                                {% endif %}
                            </div>

                            <div class="column">
                                <label for="artiste" style="margin: auto"><strong class="">Prod. by : </strong></label>
                                {% if beat.artiste %}
                                    {{ beat.artiste }}
                                {% else %}
                                    Vinny Vixi
                                {% endif %}
                            </div>

                            <div class="column">
                                <label for="bpm" style="margin: auto"><strong class="">BPM : </strong></label>
                                {% if beat.bpm %}
                                    {{ beat.bpm }}
                                {% else %}
                                    N/C
                                {% endif %}
                            </div>

                            <div class="column">
                                <label for="genre" style="margin: auto"><strong class="">Genre : </strong></label>
                                {% if beat.genre %}
                                    {{ beat.genre }}
                                {% else %}
                                    N/C
                                {% endif %}
                            </div>

                            <div class="is-flex is-centered is-vcentered justify-content-center">

                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg" style="background: rgba(0,0,0,0);box-shadow: none;border: none">
                                    <img class="open-modal" src="{{ asset('build/images/shop.ea0d13d0.png') | imagine_filter('small_size') }}" alt="Illustration" style="border-radius:3px">
                                </button>

                                {% include('includes/modal_licenses.html.twig') %}

                            </div>

                        </div>

                        <div class="columns is-centered align-items-end has-text-centered" style=" color: white;margin:0;padding: 0;height: 50%">

                            <audio controls controlsList="nodownload" preload="metadata" class="js-player beatFormBeatList" style="width: 100%;background: rgba(0,0,0,0);padding:0">
                                <source class="audio" src="{{ vich_uploader_asset(beat, 'beatFile') }}" type="audio/mp3" />
                            </audio>

                        </div>


                </div>

            </div>

        </div>

    </div>


{% endif %}



{% endfor %}


{#   SCRIPT POUR AUTO NEXT SONG   #}
<script>
    let _audio = document.getElementsByClassName('beatFormBeatList');
    for (i = 0; i < _audio.length; i++){
        let nextBeat = _audio[i+1];
        _audio[i].onended = function(){
            if(i === _audio.length){
                nextBeat = _audio[0];
            }
            nextBeat.play();

        };
    }

    // function visualizer(currentBeat)
