{% for beat in beat %}
<div class="columns is-centered is-vcentered container" style="background-color: rgba(0,0,0,0.1);margin-bottom: 30px;">

        <div class="is-flex is-centered is-vcentered justify-content-center">
                        {% if beat.beatimagename %}
                                <img src="{{ vich_uploader_asset(beat, 'beatImage') | imagine_filter('normal_size') }}" alt="Illustration" style="box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1); margin: 10px 10px 10px 0">
                        {% else %}
                                <img src="{{ asset('build/images/vinny_logo_reducidisimo.e28edbc4.png') | imagine_filter('normal_size') }}" alt="Illustration" style="box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1); margin: 10px 10px 10px 0">
                        {% endif %}
        </div>

        <div class="column is-vcentered" >

                <div class="columns is-centered is-vcentered has-text-centered">

                        <div class="column is-flex" style="justify-content: center;align-items: center">
                                <div class="">
                                        <label for=""><strong class="has-text-black">Titre : </strong></label>
                                        {% if beat.titre %}
                                                {{ beat.titre }}
                                        {% else %}
                                                N/C
                                        {% endif %}
                                </div>
                        </div>

                        <div class="column">
                                <label for=""><strong class="has-text-black">Artiste : </strong></label>
                                {% if beat.artiste %}
                                        {{ beat.artiste }}
                                {% else %}
                                        Vinny Vixi
                                {% endif %}
                        </div>

                        <div class="column">
                                <label for=""><strong class="has-text-black">Album : </strong></label>
                                {% if beat.album %}
                                        {{ beat.album }}
                                {% else %}
                                        N/C
                                {% endif %}
                        </div>

                        <div class="column">
                                <label for=""><strong class="has-text-black">Genre : </strong></label>
                                {% if beat.genre %}
                                        {{ beat.genre }}
                                {% else %}
                                   N/C
                                {% endif %}
                        </div>
                </div>

                <audio controls preload="metadata" id="player" class="js-player" style="width: 100%">
                        <source src="{{ vich_uploader_asset(beat, 'beatFile') }}" type="audio/mp3" />
                </audio>

        </div>

        <div class="is-flex is-centered is-vcentered justify-content-center">

                <button class="" id="open-modal">
                        <img src="{{ asset('build/images/shop.ea0d13d0.png') | imagine_filter('small_size') }}" alt="Illustration" style="box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.1);">
                </button>

                <div class="modal">
                        <div class="modal-background"></div>
                        <div class="modal-card">

                                <header class="modal-card-head has-background-warning">
                                        <p class="modal-card-title">Attention</p>
                                </header>

                                <section class="modal-card-body">
                                        L'annonce : <strong>#</strong> est actuellement <div class="tag is-success">publiée</div> . <br>
                                        Souhaitez vous tout de même la supprimer définitivement? <br>
                                        <i>(Cette annonce ne sera donc plus consultable)</i>
                                </section>

                                <footer class="modal-card-foot" style="justify-content: space-between;">
                                        <button class="button close-popup">Annuler</button>
                                        <button class="button is-success">Confirmer</button>
                                </footer>

                        </div>
                        <button class="modal-close is-large" aria-label="close">MODAL</button>
                </div>

        </div>


</div>











{% endfor %}

