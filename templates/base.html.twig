            <section class="is-flex justify-content-center" style="min-height: 70vh;position:relative;margin-bottom: 100px">

                <div class="column is-full-touch is-four-fifths is-size-3-touch">

                    {% block entete %}
                    {% endblock %}

                    {% block content %}
                    {% endblock %}

                </div>

                </section>


            {% block arrow_up %}
                <div class="arrow_up">

                    <a href="#top" class="is-flex align-items-center justify-content-center" style="width: 100%;height: 100%;">
                    <span class="icon justify-content-center align-items-center is-size-4 is-size-1-touch">
                        <i class="fas fa-angle-up" style="color: rgba(255, 255, 255, 0.3);"></i>
                    </span>
                    </a>

                </div>
            {% endblock %}


            {% block footer %}

                {% include('includes/footer/footer.html.twig') %}

            {% endblock %}

        {% endblock %}



        {% block javascripts %}

            <script src="https://apis.google.com/js/platform.js"></script>


            {#   SCRIPT POUR BURGER BOOSTRAP   #}
