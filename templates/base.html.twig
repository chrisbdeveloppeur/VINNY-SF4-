    <body class="has-background-white-bis">
        {% block body %}

            <div style="z-index: 2;position: sticky;top: 0;">
                {% block header %}

                    <h2 class="titre-landscape title has-text-weight-bold is-uppercase is-family-monospace" style="color: white;text-shadow:rgb(0, 63, 255) 0px 0px 15px;position: absolute;z-index: 3;left: 50%;transform: translate(-50%);display: none;justify-content: center;align-items: center;">

                        {% block titre_landscape %}

                        {% endblock %}

                    </h2>


                    {% include('includes/header/header.html.twig') %}


