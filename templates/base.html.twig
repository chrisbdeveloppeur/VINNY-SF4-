                $(document).ready(function () {
                    $("audio").on("contextmenu",function(e){
                        return false;
                    });
                });
            </script>






            {#     SCRIPT POUR COOKIE CONSENT     #}

            <script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js" data-cfasync="false"></script>

        {% block cookie_js %}
            <script>
                window.cookieconsent.initialise({
                    "palette": {
                        "popup": {
                            "background": "rgba(0,0,0,0.8)"
                        },
                        "button": {
                            "background": "#30aae4"
                        }
                    },
                    "theme": "edgeless",
                    "position": "bottom-right",
                    "content": {
                        "href": "{{ path('politique-confidentialite') }}"
                    }
                });
            </script>
        {% endblock %}

            {#    FIN SCRIPT POUR COOKIE CONSENT     #}




            {#   SCRIPT SCROLL UP   #}
            <script>
                let divScroll = document.getElementsByClassName('arrow_up');
                let scroll_position = 0;

                $("a[href='#top']").click(function() {
                    $("html, body").animate({ scrollTop: 0 }, "slow");
                    return false;
                });


                window.addEventListener('scroll', function()
                {
                    scroll_position = window.scrollY;
                    if (scroll_position >= 500){
                        divScroll[0].style.display = 'flex';
                        divScroll[0].style.opacity = 1;
                        divScroll[0].style.bottom = '5vh';
                    } else {
                        divScroll[0].style.opacity = 0;
                        divScroll[0].style.bottom = '-200px';
                    }
                });

            </script>
            {#   FIN DU SCRIPT SCROLL UP   #}


        {% endblock %}
