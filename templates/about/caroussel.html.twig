<div id="carouselExampleIndicators" class="carousel slide is-hidden-touch" data-ride="carousel" style="box-shadow: rgb(0, 0, 0) 0px 0px 15px;width: 100%">
    <ol class="carousel-indicators" style="z-index: 1">

        {% for diapo in diapo %}
            <li data-target="#carouselExampleIndicators" data-slide-to="
            {% if loop.index0 == 0 %}
                0" class="active">
            {% else %}
                {{ loop.index0 }}">
            {% endif %}
            </li>
        {% endfor %}

    </ol>

    <div class="carousel-inner is-size-4 is-size-4-touch">

        {% for diapo in diapo %}
            {% if loop.index0 == 0 %}

            <div class="carousel-item active">
            {% if diapo.diapoimagename %}
                <img class="d-block w-100" height="200px" src="{{ vich_uploader_asset(diapo, 'diapoImage') }}" alt="First slide">
            {% else %}
                <img class="d-block w-100" height="200px" src="{{ asset('build/images/BM.09ac0c25.jpg') }}" alt="slide">
            {% endif %}
                <div class="carousel-caption d-none d-md-block" style="position: absolute;top: 0;height: 100%;background: rgba(0,0,0,0.7)">
                    <h5 style="{% if diapo.text is null %}height: 100%;{% else %}height: 30%;{% endif %}" class="columns is-size-3 has-text-info is-family-monospace justify-content-center align-items-center">{{ diapo.titre|raw }}</h5>
                    <div style="height: 70%;padding: 30px;" class="columns has-text-centered has-text-white-bis has-text-centered justify-content-center align-items-center is-size-5 is-size-4-widescreen text-diapo">{{ diapo.text|raw }}</div>
                </div>
            </div>

            {% else %}

                <div class="carousel-item">
                    {% if diapo.diapoimagename %}
                        <img class="d-block w-100" height="200px" src="{{ vich_uploader_asset(diapo, 'diapoImage') }}" alt="slide">
                    {% else %}
                        <img class="d-block w-100" height="200px" src="{{ asset('build/images/BM.09ac0c25.jpg') }}" alt="slide">
                    {% endif %}
                    <div class="carousel-caption d-none d-md-block" style="position: absolute;top: 0;height: 100%;background: rgba(0,0,0,0.7)">
                        <h5 style="{% if diapo.text is null %}height: 100%;{% else %}height: 30%;{% endif %}" class="columns is-size-3 has-text-info is-family-monospace justify-content-center align-items-center">{{ diapo.titre|raw }}</h5>
                        <div style="height: 70%;padding: 30px;" class="columns has-text-centered has-text-white-bis has-text-centered justify-content-center align-items-center is-size-5 is-size-4-widescreen text-diapo">{{ diapo.text|raw }}</div>
                    </div>
                </div>

            {% endif %}

        {% endfor %}


    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Précédent</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Suivant</span>
    </a>
</div>



