{% extends 'base.html.twig' %}

{% block title %}{% include('includes/nav_title.html.twig') %} Contact{% endblock %}

{% block titre %}
    Contact
{% endblock %}

{% block entete %}
    <h2 class="subtitle has-text-centered is-3 is-family-monospace is-size-3-touch" style="position: relative">
        Feel free to chat with me by  filling the form down below
    </h2>
{% endblock %}

{% block content %}

            {% include 'includes/flash_message.html.twig' %}

            {% if form_errors(messageForm) != null %}
                <div class="form-error notification is-danger is-flex justify-content-center align-items-center column has-text-weight-bold is-size-3-touch">
                    <button class="delete" onclick="this.parentElement.parentElement.removeChild(this.parentElement);"></button>
                    {{ form_errors(messageForm) }}
                </div>
            {% endif %}

            {{ form_start(messageForm) }}


            <div class="column is-flex justify-content-center box" style="background: rgba(100,100,100,0.5);">
                <article class="column is-half-desktop has-text-centered">

                    <div class="field">
                        <label class="label is-size-3-touch">Last name</label>
                        <div class="control has-icons-left is-size-3-touch">
                            {{ form_row(messageForm.nom, {'attr' : {'class' : 'is-size-3-touch input', 'placeholder' : 'Enter your Last name', 'alt' : 'Last name'}
                            }) }}
                            <span class="icon is-small is-left" style="z-index: 0;">
                                <i class="fas fa-male"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label is-size-3-touch">First name</label>
                        <div class="control has-icons-left is-size-3-touch">
                            {{ form_row(messageForm.prenom, {'attr' : {'class' : 'is-size-3-touch input', 'placeholder' : 'Enter your First name', 'alt' : 'First name'}
                            }) }}
                            <span class="icon is-small is-left" style="z-index: 0;">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>

                    </div>

                    <div class="field">
                        <label class="label is-size-3-touch">Email *</label>
                        <div class="control has-icons-left is-size-3-touch">
                            {{ form_row(messageForm.email, {'attr' : {'class' : 'is-size-3-touch input', 'placeholder' : 'ex : mail@mail.com', 'alt' : 'email'}
                            }) }}
                            <span class="icon is-small is-left" style="z-index: 0;">
                                <i class="fas fa-envelope"></i>
                            </span>

                        </div>

                    </div>

                    <div class="field">
                        <label class="label is-size-3-touch">Subject</label>
                        <div class="control has-icons-left is-size-3-touch">
                            {{ form_row(messageForm.objet, {'attr' : {'class' : 'is-size-3-touch input', 'placeholder' : 'Enter the subject', 'alt' : 'subject'}
                            }) }}
                            <span class="icon is-small is-left" style="z-index: 0;">
                                <i class="fas fa-hashtag"></i>
                            </span>
                        </div>

                    </div>

                    <div class="field">
                        <label class="label is-size-3-touch">Message *</label>
                        <div class="control">
{#                            <textarea class="textarea is-link" placeholder="Ecrivez votre message" style="resize: none;"></textarea>#}
                            {{ form_row(messageForm.message, {'attr' : {'class' : 'is-size-3-touch textarea', 'placeholder' : 'Enter your message', 'alt' : 'message'}
                            }) }}
                        </div>
                    </div>

                    <div class="field is-grouped justify-content-center">
                        <div class="control">
                            <button class="button is-info is-size-3-touch" type="submit">Submit</button>
                        </div>
                    </div>

                </article>
            </div>

            {{ form_end(messageForm) }}





{% endblock %}
